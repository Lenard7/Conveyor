<?xml version="1.0" ?>
<robot name="conveyor_robot" xmlns:xacro="http://wiki.ros.org/xacro">
    
    <!-- first link -->
    <link_name="link_chasis">
        <gazebo>
            <static>true</static>
        </gazebo>
        <pose>0 0 0.1 0 0 0</pose>
        <inertial>
            <mass value="15"/>
            <origin rpy="0 0 0" xyz="0 0 0.1"/>
            <inertia 
                ixx = "0.04" ixy = "0.00" ixz = "0.00" 
                iyx = "0.00" iyy = "0.10" iyz = "0.00" 
                izx = "0.00" izy = "0.00" izz = "0.10"/>
        </inertial>
        <collision name="collision_chasis">
            <geometry>
                <box size="2 2 1"/>
            </geometry>
        </collision>
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="2 2 1"/>
            </geometry>
        </visual>
    </link>

    <!-- 1st joint-->
    <joint name = "joint1" type = "continuous">
        <origin xyz = "0.6 0 0.8" rpy = "0 0 0"/>
        <parent link = "link_chasis"/>
        <child link = "link_arm"/>
    </joint>


    <!-- second link -->
    <link_name="link_chasis">
        <pose>0 0 0.1 0 0 0</pose>

        <inertial>
            <mass value="0.25"/>
            <origin rpy="0 0 0" xyz="0 0 0.1"/>
            <inertia 
                ixx = "0.04" ixy = "0.00" ixz = "0.00" 
                iyx = "0.00" iyy = "0.10" iyz = "0.00" 
                izx = "0.00" izy = "0.00" izz = "0.10"/>
        </inertial>

        <collision name="collision_chasis">
            <geometry>
                <box size="2 2 1"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="2 2 1"/>
            </geometry>
        </visual>
    </link>
</robot>